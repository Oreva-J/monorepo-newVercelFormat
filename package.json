{
  "name": "my-monorepo",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run index.ts",
    "build": "bun run --filter client build",
    "build:all": "bun run --filter client build && bun run --filter server build"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vercel/node": "^5.5.5",
    "typescript": "^5.3.3"
  }
}